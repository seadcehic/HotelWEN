<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <TextView
        android:id="@+id/textViewSobe"
        android:text="Sobe"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtDatum"
        android:text="Unesite datum početka i završetka vaše rezervacije."
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/textViewSobe"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"/>

    <Button
        android:layout_below="@id/txtDatum"
        android:id="@+id/datumPocetni"
        android:text="od"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/datumZavrsni"
        android:text="do"
        android:layout_below="@+id/txtDatum"
        android:layout_toRightOf="@+id/datumPocetni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/trazi"
        android:text="trazi"
        android:layout_below="@+id/txtDatum"
        android:layout_toRightOf="@+id/datumZavrsni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/listaSoba"
        android:layout_below="@+id/datumPocetni"
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

</RelativeLayout>